# =================================
# DATABASE CONFIGURATION
# =================================

# PostgreSQL Database URL
# Format: postgresql://username:password@hostname:port/database_name?schema=schema_name
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nestjs_mvp_db?schema=public"

# =================================
# APPLICATION CONFIGURATION
# =================================

# Application Environment
NODE_ENV=development

# Application Port
PORT=4000

# =================================
# SECURITY CONFIGURATION
# =================================

# BCrypt Salt Rounds for Password Hashing
BCRYPT_SALT_ROUNDS=10

# JWT Configuration (for future authentication implementation)
# JWT_SECRET=your-super-secret-jwt-key-here
# JWT_EXPIRES_IN=1d

# =================================
# PRISMA CONFIGURATION
# =================================

# Prisma Studio Port (default: 5555)
PRISMA_STUDIO_PORT=5555

# =================================
# DOCKER CONFIGURATION
# =================================

# PostgreSQL Docker Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nestjs_mvp_db

# =================================
# DEVELOPMENT CONFIGURATION
# =================================

# Enable detailed logging in development
LOG_LEVEL=debug

# Enable CORS for development
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000